{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["dist", "prisma", "tests", "node_modules", "**/*.test.ts"],
  "include": ["./src/**/*.ts"]
}